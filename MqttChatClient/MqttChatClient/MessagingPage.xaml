<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MqttChatClient.MessagingPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="ExchangedMessages"/>
            <Entry x:Name="MessageEntry" Placeholder="Start typing..."/>
            <Button x:Name="SendButton"  Text="Send" Clicked="SendButton_Clicked" HorizontalOptions="End"/>
            <Button x:Name="RemoveButton" Text="Remove" Clicked="RemoveButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>